import os
import glob
import stat
import string

def filetime(f):
  try:
    t = os.stat(f)[stat.ST_MTIME]
  except:
    t = 0
  return t

def erasefile(f):
  try: os.unlink(f)
  except: pass

def erasedir(d):
  fs = glob.glob(d+os.sep+"*")
  for f in fs: erasefile(f)
  try: os.rmdir(d)
  except: pass

def filecopy(a,b):
  f = open(a)
  g = open(b,"w")
  g.write(f.read())
  g.close()
  f.close()

def filecopy2dir(a,d):
  base = string.split(a,os.sep)[-1]
  filecopy(a,d+os.sep+base)

def get_stdout(x):
  fout = os.popen(x,"r")
  output = fout.readlines()
  result = fout.close()
  return result,output
  
