    if opt.openmp:
      COM = COM + opt.openmp

    opt.CCOBJ_DYNAMIC_FLX = COM + COMPILE_DYNAMIC_FLX
    opt.CCLINK_DYNAMIC_FLX = COM + LINK_DYNAMIC_FLX

    opt.CCOBJ_DYNAMIC_RTL = COM + COMPILE_DYNAMIC_RTL
