      LINK_DYNAMIC_RTL = "-dynamiclib "

      COMPILE_DYNAMIC_MAIN = opt.SPEC_COMPILE_OBJ
      LINK_DYNAMIC_MAIN = ""

      COMPILE_DYNAMIC_FLX = opt.PIC + "-bundle -c " "-fno-common "
