@head(1,'Bagley Language Shootout')
@head(2,'Ackermans Function')
@select(tangler('test/bag01.flx'))
include "std";

fun A(x:int,y:int):int={
  return
    if x == 0 then  y + 1
    elif y == 0 then  A(x-1, 1)
    else A(x-1, A(x, y-1))
    endif
  ;
}

proc main()
{
    val n = 8;
    var k = 1;
    while { k <= n } {
      val v = A(3,k);
      print "Ack(3,"; print k; print "): "; print v; endl;
      k++;
    };
}

main();

