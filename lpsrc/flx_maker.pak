    CPPS = pkgdict.get("cpp_cpps",[])

    if not CCS and not CPPS:
      return

    BUILD_MACRO = pkgdict.get("build_macro","ERROR!")
    EXTRA_CFLAGS = pkgdict.get("cflags","")
    EXTRA_DFLAGS = pkgdict.get("dflags","")
    INCLUDES=pkgdict.get("include_path",[])
