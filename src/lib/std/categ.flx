open module Categ 
{
  fun curry2[u,v,r] (f:u*v->r) => fun (x:u) (y:v) => f (x,y);
  fun curry3[u,v,w,r] (f:u*v*w->r) => fun (x:u) (y:v) (z:w) => f (x,y,z);

  fun uncurry2[u,v,r] (f:u->v->r) => fun (x:u,y:v) => f x y;
  fun uncurry3[u,v,w,r] (f:u->v->w->r) => fun (x:u,y:v,z:w) => f x y z;

  fun twist2[u,v,r] (f:u*v->r) => fun (x:u,y:v) => f (y,x);

  fun ravel2[u1,u2,r1,r2] (f1:u1->r1,f2:u2->r2) => fun (x1:u1,x2:u2) => f1 x1, f2 x2;

}
