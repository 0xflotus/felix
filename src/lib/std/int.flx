typedef fun integral_promotion: TYPE -> TYPE =
  | tiny => int
  | utiny => int
  | short => int
  | ushort => int
  | int => int
  | uint => uint
  | long => long
  | ulong => ulong
  | vlong => vlong
  | uvlong => uvlong
;

open module Tiny
{
  ctor tiny: string = "static_cast<signed char>(::std::atoi($1.data()))" requires Cxx_headers::cstdlib;
  ctor[T in reals] tiny: T = "static_cast<signed char>($1)";
  proc fprint: ostream * tiny = "*$1<<(int)$2;" requires Cxx_headers::iostream;
}

