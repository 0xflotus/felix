open module Int
{
  ctor int: string = "static_cast<int>(::std::atoi($1.data()))" requires Cxx_headers::cstdlib;
  ctor[T in reals] int: T = "static_cast<int>($1)";
  // special hack
  ctor int(x:bool)=> match x with | true => 1 | false => 0 endmatch;
  proc fprint: ostream * int = "*$1<<$2;" requires Cxx_headers::iostream;
}

