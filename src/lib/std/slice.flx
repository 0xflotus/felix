publish "slice type"
  union slice[T] =
    | Slice_all
    | Slice_from of T
    | Slice_to of T
    | Slice_range of T * T
    | Slice_one of T
  ;

gen slice_range[T with Integer[T]] (first:T) (last:T) () = {
  for var i in first upto last do yield Some i; done return None[T]; 
}

// hack so for in f do .. done will work too
gen iterator[t] (f:1->opt[t]) => f;

