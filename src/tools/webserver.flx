typedef raw_xlat_t = address * string * string --> bool * string;

var xlat_felix: raw_xlat_t;
var xlat_fdoc: raw_xlat_t;
var xlat_fpc: raw_xlat_t;
var xlat_ocaml: raw_xlat_t;
