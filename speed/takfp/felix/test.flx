include "std/time";

n := 10;
fun Tak (x:float, y:float, z:float): float =>
  if (y >= x) then z
  else Tak(Tak(x-1.0f,y,z), Tak(y-1.0f,z,x), Tak(z-1.0f,x,y))
  endif
;

w := float_of n;
val start_time = Time::time ();

ignore(Tak(w*3.0f, w*2.0f, w*1.0f));

println$ (Time::time ()) - start_time;

